{
  "preset": "per",
  "exclude": [
    "packages/coinbase-php"
  ],
  "rules": {
    "types_spaces": {
      "space": "single"
    },
    "group_import": true,
    "new_with_parentheses": {
      "anonymous_class": false
    },
    "ordered_imports": {
      "sort_algorithm": "alpha"
    },
    "ordered_types": {
      "null_adjustment": "always_last"
    },
    "single_import_per_statement": false,
    "trailing_comma_in_multiline": {
      "elements": [
        "arrays",
        "arguments",
        "parameters",
        "match"
      ]
    },
    "void_return": true
  }
}
